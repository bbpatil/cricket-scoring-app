<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="cricket.ui" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="17" android:targetSdkVersion="19"/>
	
	<uses-permission android:name="android.permission.INTERNET"/>
	 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	 <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	 
	<application android:icon="@drawable/icon" android:label="@string/app_name" 
	    android:theme="@android:style/Theme.DeviceDefault.NoActionBar">
		<activity android:name=".WelcomeScreen" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ScoringScreen" />

		<activity android:name=".popups.CreateTeam"  android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"/>
