		<activity android:name=".popups.CustomSettings" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
		
		<activity android:name=".popups.Scoring" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
		<activity android:name=".popups.ScoreCard" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
		<activity android:name=".popups.Wicket" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
		<activity android:name=".popups.NewInnings" android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
